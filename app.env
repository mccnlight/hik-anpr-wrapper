# Основные настройки
UPSTREAM_URL=https://snowops-anpr-service.onrender.com/api/v1/anpr/events
PLATE_CAMERA_ID=camera-001

# Merge timing (короткие окна, чтобы не матчить чужие машины)
MERGE_WINDOW_SECONDS=20
MERGE_TTL_SECONDS=50
MERGE_MAX_EVENT_AGE_SECONDS=18.0
# Часовой пояс локального времени (Астана = UTC+5 по текущему времени)
LOCAL_TZ_OFFSET_HOURS=5
# Требовать обязательный матч снега, иначе не шлём событие
MERGE_REQUIRE_SNOW_MATCH=true

# Snow worker
ENABLE_SNOW_WORKER=true
SNOW_VIDEO_SOURCE_URL="rtsp://admin:Armat456321@194.26.239.249:555/Streaming/Channels/101"
SNOW_CAMERA_ID="camera-snow"
SNOW_YOLO_MODEL_PATH="yolov8n.pt"
SNAPSHOT_BASE_DIR="snapshots"
SNOW_CENTER_ZONE_START_X=0.15
SNOW_CENTER_ZONE_END_X=0.85
SNOW_CENTER_ZONE_START_Y=0.0
SNOW_CENTER_ZONE_END_Y=1.0
SNOW_CENTER_LINE_X=0.5
SNOW_MIN_DIRECTION_DELTA=2
SNOW_STATIONARY_TIMEOUT_SECONDS=10.0
SNOW_MISS_RESET_THRESHOLD=6
SNOW_SHOW_WINDOW=true

# Whitelist check before Gemini (optional)
# URL must accept ?plate=... and return 2xx if vehicle exists
MERGER_VEHICLE_CHECK_URL=https://snowops-anpr-service.onrender.com/internal/vehicles/check
# Bearer token for whitelist check (leave empty if not needed)
MERGER_VEHICLE_CHECK_TOKEN=<put-internal-token-from-anpr-service>

